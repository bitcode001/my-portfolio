---
interface Props {
	head: string
	desc: string
	color: string
	position: string
	children: any
}
const { head, desc, color, position } = Astro.props
---

<style>
	.virtue-card {
		animation: animate-card 3s infinite;
	}
	.virtue-card:nth-child(1) {
		animation-delay: 0.5s;
	}
	.virtue-card:nth-child(2) {
		animation-delay: 1s;
	}
	.virtue-card:nth-child(3) {
		animation-delay: 1.5s;
	}
	@keyframes animate-card {
		0% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.03);
		}
		100% {
			transform: scale(1);
		}
	}
</style>
<div
	class:list={[
		'virtue-card z-20 flex w-fit flex-row items-center justify-between rounded-2xl bg-white p-4 shadow-md',
		{ [position]: position }
	]}
>
	<div
		class:list={[
			'mr-4 flex h-12 w-12 items-center justify-center rounded-full',
			{ [color]: color }
		]}
	>
		<slot />
	</div>
	<div>
		<span class="text-base font-semibold">{head}</span>
		<p class="text-base font-normal">{desc}</p>
	</div>
</div>
