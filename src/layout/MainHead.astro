---
import { SEO } from 'astro-seo'
import GoogleAnalytics from '../utils/analytics/GoogleAnalytics.astro'

interface Props {
	title: string
	description: string
	keywords: string
	author: string
}
const { title, description, keywords, author } = Astro.props
---

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="generator" content={Astro.generator} />
	<SEO
		title={title}
		description={description}
		openGraph={{
			basic: {
				title: title,
				type: 'Basic Introduction',
				image: 'https://pbs.twimg.com/profile_images/1526056751304687617/vpkATgvQ_400x400.jpg',
				url: 'https://www.anilrai.dev'
			}
		}}
		twitter={{
			creator: '@anilrai011'
		}}
		extend={{
			// extending the default link tags
			link: [{ rel: 'icon', type: 'image/svg+xml', href: '/brand-icon-white.svg' }],
			// extending the default meta tags
			meta: [
				{
					name: 'twitter:image',
					content: 'https://pbs.twimg.com/profile_images/1526056751304687617/vpkATgvQ_400x400.jpg'
				},
				{
					name: 'twitter:title',
					content: 'Anil Rai'
				},
				{
					name: 'twitter:description',
					content: `Programmer | Developer | Designer JavaScript Lover #creative_coding Love Programming | Game Design & Development | Interface Design and Graphic Designing`
				}
			]
		}}
	/>
	{import.meta.env.PROD && <GoogleAnalytics />}
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link
		href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
		rel="stylesheet"
	/>

	<link rel="stylesheet" href="/global.css" />
	<link rel="sitemap" href="/sitemap-index.xml" />
</head>
