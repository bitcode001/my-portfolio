<style is:global>
	/* html {
		cursor: none;
	} */
	.my-cursor {
		box-sizing: content-box;
		position: absolute;
		height: 2rem;
		width: 2rem;
		border-radius: 50%;
		border: 1px solid #5769f8;
		z-index: 999;
		animation: cursorAnim 0.8s infinite alternate;
	}
	.my-cursor::after {
		box-sizing: content-box;
		content: '';
		position: absolute;
		top: -8px;
		left: -8px;
		height: 2rem;
		width: 2rem;
		border-radius: 50%;
		border: 8px solid #7470d4;
		opacity: 0.5;
		z-index: 999;
		animation: cursorRingAnim 0.5s infinite alternate;
	}
	@keyframes cursorAnim {
		from {
			transform: scale(1);
		}
		to {
			transform: scale(0.7);
		}
	}
	@keyframes cursorRingAnim {
		from {
			transform: scale(1);
		}
		to {
			transform: scale(0.5);
		}
	}
</style>
<div class="my-cursor"></div>

<script>
	const cursor = document.querySelector('.my-cursor')

	document.addEventListener('mousemove', trackMouse)

	// document.addEventListener('mouseenter', () => {
	// 	if (cursor) cursor.style.transform = 'scale(1.3)'
	// })

	// document.addEventListener('mouseleave', () => {
	// 	if (cursor) cursor.style.transform = 'scale(1)'
	// })

	function trackMouse(e: MouseEvent) {
		if (cursor) {
			const w = cursor.clientWidth
			const h = cursor.clientHeight
			// cursor.style.top = `${e.clientY - h / 2}px`
			// cursor.style.left = `${e.clientX - w / 2}px`

			cursor.animate(
				{
					left: `${e.pageX - h / 2}px`,
					top: `${e.pageY - w / 2}px`
				},
				{ duration: 500, fill: 'forwards' }
			)
		}
	}
</script>
